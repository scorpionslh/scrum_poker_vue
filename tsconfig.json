{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "noEmit": true,
  "exclude": [
    "node_modules", 
    "**/*.spec.ts", 
    "out/**"
  ],

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
